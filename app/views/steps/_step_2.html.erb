</div><!-- /step 2-->

<script src="js/jquery-3.5.1.min.js"></script>

<script type="text/javascript">
  $('input[name="claim[addons_101]"]').click(function(el){
    if (el.currentTarget.parentElement.classList.contains("checked")) {
      $("#supplemental_room").show();
    } else {
      $("#supplemental_room").hide();
    }
  });

  function addRoom() {
    room_key = Math.random().toString(36).substring(2,7);
    new_room = `<div class="row" id="room_${room_key}">
                  <div class="col-sm-6">
                      <div class="form-group">
                          <input type="text" name="claim[room_name][]" class="form-control" placeholder="Room Name">
                      </div>
                  </div>
                  <div class="col-sm-5">
                      <div class="form-group">
                        <input type="text" name="claim[room_dimension][]" class="form-control" placeholder="Room Dimension (L x W x H)">
                      </div>
                  </div>
                  <div class="col-sm-1">
                    <div class="form-group text-center">
                      <a href="#0" onclick="$('#room_${room_key}').remove();"><i class="icon-minus-circled icon-room"></i></a>
                    </div>
                  </div>
                </div>`

    $("#supplemental_room").append(new_room);
  }

  function toogleAddons(el, id) {
    if (el.classList.contains("checked")) {
      el.classList.remove("checked");
      el.parentElement.classList.remove("checked");
      el.value = '';
    } else {
      el.classList.add("checked");
      el.parentElement.classList.add("checked");
      el.value = id;
    }
  }
</script>
