        <label>Supplemental Claim
            <span style="float: right;">$199.99</span>
            <input id="addons_101" name="claim[addons_101]" type="radio" value="101" class="icheck" onclick="toogleAddons(this, 101);">
            <div id="supplemental_room">
              <br>
              <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <input type="text" name="claim[room_name][]" class="form-control" placeholder="Room Name" required>
